{
  "compilerOptions": {
    "lib": ["esnext"],
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules/*"]
}
